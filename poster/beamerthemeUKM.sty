	\end{beamercolorbox}
	\vskip-2cm
	}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{footline}{
	\begin{beamercolorbox}[wd=\paperwidth]{upper separation line foot}
		\rule{0pt}{2pt}
	\end{beamercolorbox}
	\leavevmode%
	\begin{beamercolorbox}[wd=\paperwidth]{author in head/foot}%
		\begin{columns}[c]
			\begin{column}{.04\paperwidth}
			\end{column}
			\begin{column}{.07\paperwidth}
				\includegraphics[width=.95\textwidth, keepaspectratio]{\photo}
			\end{column}	
			\begin{column}{.16\paperwidth}
				\usebeamercolor{author in head/foot}{\color{fg}\small{\insertauthor}\\}
				\usebeamercolor{institute in head/foot}{\color{fg}\small{\insertinstitute}\\}
				\usebeamercolor{institute in head/foot}{\color{fg}\small{\email}\\}
				\usebeamercolor{institute in head/foot}{\color{fg}\small{\telephone}\\}
			\end{column}
			\foreach \sv in \supervisors
			{%
				\foreach \a [count=\xi]  in \sv
				{%
					\ifnum \xi=1
						\begin{column}{.07\paperwidth}
							\includegraphics[width=.95\textwidth, keepaspectratio]{\a}
						\end{column}	
					\fi
					\ifnum \xi>1
						\begin{column}{.16\paperwidth}
						\foreach \at in \a
						{%
							\usebeamercolor{institute in head/foot}{\color{fg}\small{\at}\\}
						}
						\end{column}
					\fi
				}
			}
			\begin{column}{.04\paperwidth}
			\end{column}
		\end{columns}
	\end{beamercolorbox}
	\vskip0pt%
	\begin{beamercolorbox}[wd=\paperwidth]{lower separation line foot}
		\rule{0pt}{2pt}
	\end{beamercolorbox}
	}

